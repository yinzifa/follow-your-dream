<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_appkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入appkey"
            android:text="1542367215388" />

        <EditText
            android:id="@+id/et_tenantid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入tenantID"
            android:inputType="number"
            android:text="100002" />

        <EditText
            android:id="@+id/et_roleid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入roleID"
            android:text="0X090402013C33775E" />

        <EditText
            android:id="@+id/et_service_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请先输入serviceKey"
            android:text="f25044b28972d0281b2b2da41b2149e1" />

        <EditText
            android:id="@+id/et_service_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入serviceSecret"
            android:text="p0NnB9BeBzO1ZxoyfLLYXLAIhstMw5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_international"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海外版" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_init"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="初始化配置" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注册客服功能" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="更改游戏屏幕方向" />

            <Button
                android:id="@+id/btn_unregister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="解除客服注册" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#2196F3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开客服"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_unreadmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_demo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone"
            android:text="测试" />

    </LinearLayout>

  </androidx.core.widget.NestedScrollView>